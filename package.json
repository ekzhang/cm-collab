{
  "name": "cm-collab",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -c blue,red \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "vite",
    "dev:server": "nodemon --esm server/main.ts",
    "build": "tsc && vite build",
    "start": "ts-node --esm --transpile-only server/main.ts",
    "format": "prettier --ignore-path .gitignore --write .",
    "format:check": "prettier --ignore-path .gitignore --check ."
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.8.0",
    "@codemirror/collab": "^6.0.0",
    "@codemirror/commands": "^6.2.4",
    "@codemirror/lang-markdown": "^6.1.1",
    "@codemirror/language": "^6.8.0",
    "@codemirror/lint": "^6.2.2",
    "@codemirror/search": "^6.5.0",
    "@codemirror/state": "^6.2.1",
    "@codemirror/view": "^6.13.2",
    "@redis/client": "^1.5.8",
    "express": "^4.18.2",
    "nanoid": "^4.0.2",
    "postgres": "^3.3.5",
    "reconnecting-websocket": "^4.4.0",
    "remark-html": "^15.0.2",
    "remark-parse": "^10.0.2",
    "ts-node": "^10.9.1",
    "unified": "^10.1.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/ws": "^8.5.5",
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "typescript": "~5.1.3",
    "vite": "^4.3.9"
  },
  "prettier": {
    "proseWrap": "always",
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
